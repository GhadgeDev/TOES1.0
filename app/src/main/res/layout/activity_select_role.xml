<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectRoleActivity"
    android:background="@color/white"

    >
<TextView
    android:id="@+id/txtWlcm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="25dp"
    />
    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtWlcm"
        android:text=","
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp"
        />
    <TextView
    android:id="@+id/txtmesg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtname"
    android:layout_marginLeft="25dp"
    android:textSize="20sp"
    android:text="We currently have over\n100+ workers and recruiters\nwaiting for you !"/>
    <TextView
        android:id="@+id/txtselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtmesg"
        android:layout_centerHorizontal="true"
        android:text="Select Your Role"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_margin="25dp"
        />
    <LinearLayout
        android:id="@+id/llBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtselect"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">
    <Button
        android:id="@+id/btnFindJob"
        android:layout_width="324dp"
        android:layout_height="55dp"

        android:background="@drawable/englishbutton"
        android:text="Find Job"
        android:textColor="@color/white"


        />
    <Button
        android:id="@+id/btnFindWorker"
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/englishbutton"
        android:text="Find Worker"
        android:textColor="@color/white"
        android:layout_below="@+id/btnFindJob"
        />
    </LinearLayout>
    <ImageView
        android:id="@+id/imgIllustrator1"
        android:layout_margin="25dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:foregroundGravity=""
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/llBtn"
        android:src="@drawable/thinking"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCall"
        android:layout_width="50dp"
        android:visibility="gone"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:foreground="@drawable/alert"
        android:src="@drawable/alert"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>