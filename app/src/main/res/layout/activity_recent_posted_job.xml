<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecentPostedJobActivity">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="324dp"
        android:text="Hey,\ndo you want to\nselect previous posted job"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_above="@+id/lllist"
        android:layout_margin="50dp"
        />


    <LinearLayout
        android:id="@+id/lllist"
        android:layout_width="324dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/devnagaribtn"
        >
         <androidx.recyclerview.widget.RecyclerView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/rvRecentJobList"/>
      >
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:clickable="true"
        android:drawingCacheQuality="auto"
        android:fadeScrollbars="false"
        android:focusable="auto"
        android:foreground="@android:drawable/ic_input_add"
        android:foregroundGravity="center"
        android:scrollbarTrackHorizontal="@drawable/devnagaribtn"

        app:backgroundTint="#303F9F"
        app:backgroundTintMode="add"
        app:elevation="10dp"
        app:rippleColor="#512DA8"
        app:useCompatPadding="false" />
  </RelativeLayout>