<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/worker_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/worker_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6259C5"
            app:title="Toes"
            app:titleTextColor="#6259C5" />

        <TextView
            android:id="@+id/select_recruiter_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/worker_toolbar"
            android:background="#6259C5"
            android:gravity="bottom|center"
            android:paddingBottom="15dp"
            android:text="Select Job"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recruiter_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/select_recruiter_text" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:backgroundTint="#827ADE"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>