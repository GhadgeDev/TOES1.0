<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RecruiterHomeActivity">

    <TextView
        android:id="@+id/select_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/lohitdevanagari"
        android:gravity="center_horizontal"
        android:text="@string/select_job_title"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinnerSelectJob"
        style="@style/Widget.AppCompat.Spinner.DropDown"
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@drawable/select_job_title"
        android:gravity="center"
        android:isScrollContainer="true"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:popupBackground="#CC3426D8"
        android:scrollbarStyle="outsideInset"
        android:textAlignment="center"
        android:verticalScrollbarPosition="left" />

    <EditText
        android:id="@+id/jobDescription"
        android:layout_width="324dp"
        android:layout_height="170dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/devnagaribtn"
        android:gravity="top|left"
        android:hint="Describe job in detail"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="#ABA9A9" />

    <Button
        android:id="@+id/btnsearch"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/englishbutton"
        android:text="@string/search_job_title"
        android:textColor="@color/white" />

</LinearLayout>